{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=supernova_school;Username=postgres;Password=admin;Include Error Detail = true"
  },
 
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "Supernova"
    },
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": {
      "ElasticsearchSink": {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "super_nova_{0:yyyy_MM_dd}",
          "bufferBaseFilename": "./logs/docker-elk-serilog-web-buffer",
          "restrictedToMinimumLevel": "Information",
          "emitEventFailure": "WriteToSelfLog",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv7",
          "typeName": "my_segmento"
        }
      },
      "ConsoleSink": {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{Level:u3}] [{SourceContext}] {Message:lj} {NewLine}{Exception}"
        }
      },
      "FileSink": {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    }
  },
  "TelegramBotConfig": {
    "Token": "",
    "WebHookUrl": "",
    "AdminUserIdsFromTelegram": [
      ""
    ]
  },
  "SecurityConfig": {
    "SecretKey": "",
    "InitVector": ""
  }
}
